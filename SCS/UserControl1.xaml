<UserControl x:Class="SCS.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCS" xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label
            Name="CurrentUser"
            Grid.Row="0"
            Grid.Column="0"
            Content="Koteckuy"
            Margin="1,0,0,0"
            HorizontalAlignment="Right" 
            VerticalAlignment="Center"/>
        <ui:PersonPicture
            x:Name="UserPicture"
            Grid.Row="0"
            Grid.Column="1"
            Height="35"
            HorizontalAlignment="Right" 
            VerticalAlignment="Center" 
            ProfilePicture="{Binding IsChecked, ElementName=ProfileImageCheck}"
            DisplayName="Jane Doe" Margin="10,0,0,0"/>
    </Grid>
</UserControl>
